<h1>Products</h1>
<hr>

<div class="products-container">
  <% current_category = nil %>
  <% @products.each do |product| %>
    <% unless current_category == product.category.name %>
      <% if current_category.present? %>
        <hr class="category-divider">
      <% end %>
      <div class="category-section">
        <h2 class="category-title"><%= product.category.name %></h2>
      </div>
      <% current_category = product.category.name %>
    <% end %>
    <div class="product-item">
      <h3 class="product-title"><%= link_to product.title, product_path(product) %></h3>
      <p><strong>Price:</strong> $<%= product.price %></p>
      <hr>
    </div>
  <% end %>
</div>
