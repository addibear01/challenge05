<h1>Products</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <h2><%= product.title %></h2>
        <p><%= product.description %></p>
        <p>Price: <%= number_to_currency(product.price) %></p>
        <p>Stock: <%= product.stock_quantity %></p>
        <p>Category: <%= product.category.name %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No products found.</p>
<% end %>
