<h1>Products</h1>
<hr>
<% @products.each do |product| %>
  <div class="product">
    <h2><%= product.category.name %></h2> 
    <h3><%= product.title %></h3>
    <p><%= product.description %></p>
    <p><strong>Price:</strong> $<%= product.price %></p>
    <p><strong>Stock:</strong> <%= product.stock_quantity %></p>
    <hr>
  </div>
<% end %>
